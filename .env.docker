# Golden Axe Docker Environment Configuration
# This file contains Docker-specific defaults
# Copy to .env and customize as needed: cp .env.docker .env

# ============================================================================
# Docker Network Configuration
# ============================================================================
# When running in Docker, services use Docker network names instead of localhost

# Backend (be) Configuration
export PG_URL="postgresql://golden_axe:golden_axe@postgres:5432/be"
export PG_URL_RO="postgresql://golden_axe:golden_axe@postgres:5432/be"
export PG_URL_FE="postgresql://golden_axe:golden_axe@postgres:5432/fe?application_name=be"
export LISTEN="0.0.0.0:8000"
export RUST_LOG="info"

# Frontend (fe) Configuration
# Note: PG_URL_FE is shared with backend
export PORT="8001"
export BE_URL="http://be:8000"
export FE_URL="http://localhost:9001"
export ADMIN_API_SECRET="docker-dev-secret"

